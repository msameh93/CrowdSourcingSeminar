<div class="panel panel-default" id= "online-friends">
  <div class="panel-body">
    <h2 id="online">Choose a request:</h2>
    <% if !@req_online.blank? %>
      <div class="row" id="picture-row">
        <% for f in @req_online %>
          <div class="col-xs-6 col-md-3">
            <div class= "panel panel-default" id= "online_image_div">
              <div class= "panel-body">
                <h2 id="online-request"><%= (User.find_by_id(f['sender_id'])).name.split[0] %></h2>
                <img class="media-object" id= "online_image" src="<%= (User.find_by_id(f['sender_id'])).image %>">
                <%= link_to("Play", {controller: "games", action: "start_game", request_id: f.id}, :id=>'play_button', :class=>'btn btn-success') %>
                <%= link_to("Delete", {controller: "games", action: "delete_request", request_id: f.id}, :id=>'delete_button', :class=>'btn btn-danger')%>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <h2 id="online">You have no pending requests.</h2>
    <% end %>
  </div>
</div>
